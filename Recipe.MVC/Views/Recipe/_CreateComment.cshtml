@model Recipe.Application.Comment.Commands.CreateComment.CreateCommentCommand
<div id="createComment">
    <form asp-action="CreateComment">
        <div class="mb-3">
            <input asp-for="RecipeEncodedTitle" type="hidden" />
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="control-label">Opinia</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Dodaj" class="btn btn-primary" />
        </div>

    </form>
</div>

